<h2>Sum Of All Fears</h2>
<div class="row">
    <div class="col-md-12 text h5">
        Create a searchable array by entering 6 numbers into the fields:
    </div>
</div>
<div class="row">
    <div class="col-md-2">
        <input type="number" id="num1" placeholder="number 1" />
    </div>
    <div class="col-md-2">
        <input type="number" id="num2" placeholder="number 2" />
    </div>
    <div class="col-md-2">
        <input type="number" id="num3" placeholder="number 3" />
    </div>
    <div class="col-md-2">
        <input type="number" id="num4" placeholder="number 4" />
    </div>
    <div class="col-md-2">
        <input type="number" id="num5" placeholder="number 5" />
    </div>
    <div class="col-md-2">
        <input type="number" id="num6" placeholder="number 6" />
    </div>
</div>
<div class="row">
    <div class="col-md-12 mt-3 h5">
        Establish a "K" value by entering a number in the field:
    </div>
    <div class="row">
        <div class="col-md-12 mt-3">
            <input type="number" id="kValue" placeholder="Value" />
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12 mt-3">
        <button id="btnSum" class="btn btn-primary btn-sm">Search</button>
        <button id="btnClear" class="btn btn-danger btn-sm">Clear</button>
    </div>
</div>
<br />

<div class="row">
    <div id="result">

    </div>
</div>

@section scripts{

    <script>
  

        //$("#btnToggle").click(function () {
        //    $("#code").toggle();

        //    if ($(this).text() == "Show Code") {
        //        $(this).text("Hide Code");
        //    }
        //    else {
        //        $(this).text("Show Code");
        //    }
        //});

        $("#btnClear").click(function () {
  
            $("#num1").val("")
            $("#num2").val("")
            $("#num3").val("")
            $("#num4").val("")
            $("#num5").val("")
            $("#num6").val("")
            $("#kValue").val("");
            $("result").html("");

        });

        $("#btnSum").click(function () {
           
     
            //declare an empty array
            var myArray = new Array();

            //Get all the numbers
            myArray.push(+$("#num1").val());
            myArray.push(+$("#num2").val());
            myArray.push(+$("#num3").val());
            myArray.push(+$("#num4").val());
            myArray.push(+$("#num5").val());
            myArray.push(+$("#num6").val());

            var kValue = +$("#kValue").val();
            var found = false;
            var foundNumber1 = 0;
            var foundNumber2 = 0;

            for (var index = 1; index < myArray.length - 1; index++) {
                var position = myArray.indexOf(kValue - myArray[index], index + 1);
                if (position > 0) {
                    found = true;
                    foundNumber1 = myArray[index];
                    foundNumber2 = myArray[position]
                    break;
                }

                //for (var j = index + 1; j < myArray.length - 1; j++) {
                //    if (kValue == myArray[index] + myArray[j]) {
                //        found = true;
                //        break;
                //    }
                //}
            }

            if (found) {
                $("#result").html("<b>" + kValue + "</b> was found by adding array members " + "<span class='target'>" + foundNumber1 +
                    " </span> and <span class='target'>" + foundNumber2 + "</span>");
            }
            else {
                $("result").text("K was not found!");
            }

        });</script>

}


